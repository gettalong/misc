<script src="{relocatable: deckjs/extensions/timekeeper/deck.timekeeper.js}"></script>
<script src="{relocatable: deckjs/extensions/scale/deck.scale.js}"></script>

<script>
  $(function() {
    $.deck('.slide', \{fitFollowsClone: false});
  });
</script>
</body>
</html>
